# Server Configuration
NODE_ENV=development
PORT=5001

# Database
MONGODB_URI=mongodb://localhost:27017/empirestatewalkers

# JWT Configuration
# SECURITY: Generate using: openssl rand -base64 32
# NEVER use a weak or predictable secret in production!
JWT_SECRET=REPLACE_WITH_SECURE_RANDOM_STRING_USE_OPENSSL_RAND_BASE64_32
JWT_EXPIRE=30d

# CORS Configuration
# In development, CORS allows all origins
# In production, set this to your frontend domain
CORS_ORIGIN=http://localhost:8080
